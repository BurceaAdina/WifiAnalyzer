<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/babyblue"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="100dp">


        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Recomandări de Securitate"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:padding="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        >

        <LinearLayout
            android:layout_below="@+id/ll1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/expand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="10dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Schimbarea parolei implicite a routerului"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Majoritatea routerelor vin cu o parolă implicită care este bine cunoscută. Schimbarea acestei parole este esențială pentru prevenirea accesului neautorizat."
                        android:visibility="gone"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/expand1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="10dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Utilizarea criptării WPA3 sau WPA2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/details1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WPA3 este cea mai nouă și mai sigură metodă de criptare pentru rețelele Wi-Fi. Dacă routerul nu suportă WPA3, se recomandă utilizarea WPA2. Utilizarea WEP ar trebui evitată, deoarece este depășit și vulnerabil."
                        android:visibility="gone"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"/>



                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/expand2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="10dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ascunderea SSID-ului (Service Set Identifier)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/details2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ascunderea numelui rețelei Wi-Fi face rețeaua mai greu de detectat de către utilizatorii neautorizați. Deși nu este o măsură de securitate infailibilă, poate descuraja unele încercări de acces neautorizat."
                        android:visibility="gone"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"/>



                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/expand3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="10dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activarea filtrării adreselor MAC"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/details3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filtrarea adreselor MAC permite doar dispozitivelor cu adrese MAC specifice să se conecteze la rețeaua Wi-Fi, adăugând un nivel suplimentar de securitate."
                        android:visibility="gone"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"/>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/expand4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="10dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/layout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dezactivarea WPS (Wi-Fi Protected Setup)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/details4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WPS poate fi exploatat de atacatori pentru a obține acces la rețeaua Wi-Fi. Dezactivarea acestei funcții poate preveni astfel de atacuri."
                        android:visibility="gone"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/expand5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="10dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/layout5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actualizarea firmware-ului routerului"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/details5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actualizarea regulată a firmware-ului routerului asigură că sunt aplicate cele mai recente patch-uri de securitate și îmbunătățiri."
                        android:visibility="gone"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/expand6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="10dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/layout6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Utilizarea unei rețele pentru oaspeți"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/details6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dacă se permite altor persoane să se conecteze la rețeaua Wi-Fi, este recomandată configurarea unei rețele separate pentru oaspeți. Aceasta izolează rețeaua principală și limitează accesul la dispozitivele critice."
                        android:visibility="gone"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/expand7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="10dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/layout7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reducerea puterii semnalului Wi-Fi"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/details7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reducerea puterii semnalului Wi-Fi poate limita aria de acoperire a rețelei, făcând mai dificil accesul neautorizat din exteriorul locuinței sau biroului."
                        android:visibility="gone"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/expand8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="10dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/layout8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monitorizarea dispozitivelor conectate"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/details8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Revizuirea periodică a listei dispozitivelor conectate la rețeaua Wi-Fi și deconectarea oricărui dispozitiv neautorizat sau necunoscut contribuie la menținerea securității rețelei."
                        android:visibility="gone"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/expand9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="10dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/layout9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Configurarea unui VPN (Virtual Private Network)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/details9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Utilizarea unui VPN pentru rețeaua Wi-Fi adaugă un strat suplimentar de criptare și securitate pentru toate comunicațiile care trec prin rețea."
                        android:visibility="gone"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/expand10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="10dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/layout10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Implementarea unei parole puternice"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/details10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O parolă complexă, care include o combinație de litere mari și mici, cifre și simboluri, este esențială pentru securitatea rețelei Wi-Fi. Parolele ușor de ghicit trebuie evitate."
                        android:visibility="gone"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/expand11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="10dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/layout11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dezactivarea accesului la distanță"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/details11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dezactivarea accesului la router de la distanță, dacă nu este necesar, reduce riscul de atacuri din afara rețelei locale."
                        android:visibility="gone"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>